/**app.wxss**/

text {
  font-family: MicroSoft yahei;
}

page {
  height: 100%;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 100%;
}

.loading-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.item-view {
  padding: 10px;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #dedede;
  border-left: 1px solid #dedede;
  box-shadow: 2px 2px 2px #c7c7c7;
  margin: 10px;
  border-radius: 5px;
}

.item-view .title {
  text-align: center;
  color: dodgerblue;
  margin-bottom: 10px;
  font-size: 22px;
}

.item-view .content {
  font-size: 20px;
  color: black;
  word-break: break-all;
}

.item-view image {
  width: 100%;
  /*height: 100vh;*//*margin-top: 10px;*/
}

.bottom-layout {
  width: 100%;
  justify-content: flex-end;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-layout .date {
  color: grey;
  font-size: 18px;
}

.bottom-layout image {
  margin-left: 20rpx;
  width: 18px;
  height: 18px;
}

.bottom-layout .num {
  margin-left: 10rpx;
  color: indianred;
  font-size: 18px;
}
.button{
  margin-top: 200rpx;
  border: 1px solid #ffffff;
  width:350rpx;
  height:85rpx;
  border-radius: 10px;
  text-align: center;
}
.button-container{
  margin-top: 150rpx;
  font-size: 35rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #ffffff;
}